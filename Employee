public class Employee {
    private int id;
    private double salary;
    public Employee(int id, double salary) {
        this.id = id;
        this.salary = salary;
    }
    public double getSalary() {
        return salary;
    }
    public void setSalary(double newSalary) {
        double minSalary = 30000; // Minimum salary threshold
        if (newSalary >= minSalary) {
            this.salary = newSalary;
        } else {
            System.out.println("Error: Salary cannot be less than " + minSalary);
        }
    }
    public int getId() {
        return id;
    }
    public static void main(String[] args) {
        Employee emp = new Employee(1, 35000);
        System.out.println("Initial Salary: " + emp.getSalary());
        emp.setSalary(40000);
        System.out.println("Updated Salary: " + emp.getSalary());
        emp.setSalary(25000);  // This should show an error message
    }
}
